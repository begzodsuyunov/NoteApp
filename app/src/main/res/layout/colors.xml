<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="#00000000"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dialogs.ColorPickDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Color of Note"
        android:layout_margin="12dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#00000000"
            android:rotation="180"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/color_green"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/color_pick_green"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/color_black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/color_pick_black"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/color_blue"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/color_pick_blue"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/color_orange"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/color_pick_orange"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/color_pink"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:srcCompat="@drawable/color_pick_pink"
                android:background="?android:selectableItemBackgroundBorderless"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/color_red"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/color_pick_red"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/color_yellow"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                android:background="?android:selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/color_pick_yellow"/>
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>